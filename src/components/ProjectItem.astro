---
interface props {
    Title: string;
    Description: string;
    Date: string;
    technologies: string;
    Link?: string;
    img?: string;
}
const { Title, Description, Date, technologies, Link } = Astro.props
---
<!-- <ol class="relative border-gray-200 dark:border-gray-700"> -->
    <div class="flex items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-gray-100 opacity-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 opacity-100">
        <img class="w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src="img" alt="">
        <div class="flex flex-col justify-between p-4 leading-normal">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{ Title }</h5>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{ Description }</p>
            <p class= "mb-3 font-normal text-gray-700 dark:text-gray-400">{ Date }</p>
        <span class="pill">{ technologies }</span>
        </div>
    </div>
</ol>